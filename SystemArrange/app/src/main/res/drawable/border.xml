<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000" />

            <corners
                android:bottomLeftRadius="6dip"
                android:bottomRightRadius="6dip"
                android:radius="3dp"
                android:topLeftRadius="6dip"
                android:topRightRadius="6dip" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="0"
                android:centerY="0"
                android:endColor="#dddddd"
                android:startColor="#ffffffff" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <stroke
                android:width="1dp"
                android:color="#30000000"></stroke>
            <corners
                android:bottomLeftRadius="6dip"
                android:bottomRightRadius="6dip"
                android:radius="3dp"
                android:topLeftRadius="6dip"
                android:topRightRadius="6dip" />
        </shape>
    </item>
</layer-list>